<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>Sensor_SmartEditor</artifactId>
    <groupId>org.52North.metadata</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>Sensor_SmartEditor-api</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <includes>
              <include>org.n52.metadata:smarteditor-api</include>
              <include>org.52North.metadata:Sensor_SmartEditor-api</include>
            </includes>
          </artifactSet>
          <filter>
            <artifact>org.n52.metadata:smarteditor-api</artifact>
            <excludes>
              <exclude>de/conterra/smarteditor/tiles/BodyViewPreparer.class</exclude>
              <exclude>de/conterra/smarteditor/xml/EditorContext.class</exclude>
              <exclude>de/conterra/smarteditor/service/BackendManagerService.class</exclude>
            </excludes>
          </filter>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>

