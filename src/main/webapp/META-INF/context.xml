<!-- Sample context.xml
      You have to configure the correct 'docBase' attribute
      if the webapp isn't running in the webapps directory of the tomcat.
-->

<Context reloadable="true"
         crossContext="false"
         antiJARLocking="false"
         antiResourceLocking="false">

   <!--  uncomment for jndi support -->
     <Resource name="jdbc/editor" auth="Container" type="javax.sql.DataSource"
              driverClassName="${db.jdbc.driver}"
              url="${db.jdbc.url}"
              username="${db.jdbc.user}"
              password="${db.jdbc.password}"
              maxActive="20"
              maxIdle="10"
              maxWait="-1" />
    <!-- disable persistent sessions -->
    <Manager distributable="false"
             saveOnRestart="false"
             pathname=""/>
</Context> 